<!--条件语句-->
{{#if bool}}
    欢迎您，tom
{{else}}
    请登录
{{/if}}

<!--条件很多-->
{{#if typeSwitch.isAAA}}
    aaa
{{else if typeSwitch.isBBB}}
    bbb
{{else if typeSwitch.isCCC}}
    ccc
{{else}}
    default
{{/if}}

{{#unless abc}}
    abc内容
{{/unless}}

<!--循环语句-->
<ul>
    {{#each arr}}
        <li>
            {{addOne @index}}<!--序号,利用了addOne帮助方法，行内helper-->
            {{name}}--
            {{city.cname}}--
            {{#each hobby}}
                {{.}}<!--此处的 . 等同于 this-->
            {{/each}}
        </li>
    {{else}}
        没有任何数据
    {{/each}}
</ul>

<!--遍历对象-->
{{#each obj}}
    key:{{@key}}
    value:{{.}}
{{/each}}

<!--使用自定义的helper-->
<p>生日：{{date birthday 'YYYY-MM-DD hh:mm:ss'}}</p>

